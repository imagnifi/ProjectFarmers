<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="ru.imagnifi">
    <author>imagnifi</author>
    <namespace>district</namespace>
    <entity
            name="District"
            local-service="true"
            remote-service="false"
            table="district_details"
            uuid="true">
<!--            data-source="extDataSource">-->
        <column name="districtId" type="long" primary="true"></column>
        <column name="name" type="String"></column>
        <column name="number" type="int"></column>
        <column name="status" type="boolean"></column>

        <order>
            <order-column name="name" order-by="desc" />
        </order>

        <finder name="Name" return-type="Collection">
            <finder-column name="name" />
        </finder>

    </entity>
</service-builder>
